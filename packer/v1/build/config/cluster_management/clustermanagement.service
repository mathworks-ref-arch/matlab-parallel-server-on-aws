[Unit]
# This service handles autoscaling and executes termination policies, if any active.
Description=Cluster management service for MATLAB Parallel Server
After=network.target
Wants=clustermanagement.timer

[Service]
Type=oneshot
ExecStart=/opt/mathworks/cluster_management/cluster_management.py

[Install]
WantedBy=default.target